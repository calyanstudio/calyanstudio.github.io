---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: 'Project One',
    description: 'A brief description of the first project. It was a challenging but rewarding experience.',
  },
  {
    title: 'Project Two',
    description: 'A brief description of the second project. We learned a lot and delivered a great product.',
  },
  {
    title: 'Project Three',
    description: 'A brief description of the third project. This one was particularly innovative.',
  },
];
---

<Layout>
  <main class="flex flex-col items-center min-h-[calc(100vh-8rem)] pt-16">
    <h1 class="text-5xl font-bold mb-8">Our Projects</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(project => (
        <div class="bg-[#2a2a2a] p-6 rounded-lg shadow-md">
          <h2 class="text-3xl font-bold mb-4 text-[#00aaff]">{project.title}</h2>
          <p class="text-lg">{project.description}</p>
        </div>
      ))}
    </div>
  </main>
</Layout>
