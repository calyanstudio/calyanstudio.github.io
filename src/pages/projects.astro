---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: 'Mero Patra',
    description: 'Online #1 Nepali News Portal from Sindhuli.',
  },
  {
    title: 'Janaprabhat School',
    description: 'School Website.',
  },
  {
    title: 'Kali Pokhari',
    description: 'Online Nepali News Portal based on Kali Pokhari.',
  },
];
---

<Layout title="Our Projects" description="Explore the web, game, and app development projects by Calyan Studio.">
  <main class="flex flex-col items-center min-h-[calc(100vh-4rem)] px-4">
    <h1 class="text-4xl sm:text-5xl font-bold mb-8 text-[#e2e8f0]">Our Projects</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(project => (
        <div class="bg-[#2d3748] p-6 rounded-lg shadow-md text-[#e2e8f0]">
          <h2 class="text-2xl sm:text-3xl font-bold mb-4 text-[#4299e1]">{project.title}</h2>
          <p class="text-base sm:text-lg">{project.description}</p>
        </div>
      ))}
    </div>
  </main>
</Layout>